<p id="notice"><%= notice %></p>

<h1>Incidentes</h1>

<hr/>
 <%= render 'formbusca' %>
<hr/>

<table class="table">
  <thead>
    <tr>
      <th>Lat</th>
      <th>Long</th>
      <th>Tipo</th>
      <th>Data</th>
      <th>Hora</th>
      <th>Descricao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @incidentes.each do |incidente| %>
      <tr>
        <td><%= incidente.lat %></td>
        <td><%= incidente.long %></td>
        <td><%= incidente.tipo %></td>
        <td><%= incidente.data %></td>
        <td><%= incidente.hora %></td>
        <td><%= incidente.descricao %></td>
        <td><%= link_to 'Show', incidente %></td>
        <td><%= link_to 'Edit', edit_incidente_path(incidente) %></td>
        <td><%= link_to 'Destroy', incidente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Incidente', new_incidente_path, :class => "btn btn-primary" %>
